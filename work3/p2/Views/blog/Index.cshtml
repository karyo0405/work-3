@{
    ViewBag.Title = "Index";
    var articles = ViewBag.BlogArticles as List<BlogArticle>;

}
<h2>博客</h2>
<fieldset>
    <form method="get" action="@Url.Action("index")">
        搜索：<input type="text" name="a" value="@ViewBag.a" /> <input type="submit" value="搜素" />
    </form>
<ol>
    @foreach (var item in articles)
    {
        <li>
            @Html.ActionLink("[  编辑  ]", "Edit", new { id = item.Id }) |
            @Html.ActionLink("[  删除  ]", "Delete", new { id = item.Id }) |
            <a href="@Url.Action("Show",new { id=item.Subject })">@item.Subject</a>
        </li>
    }
</ol>
